{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "dev",
            "path": ".",
            "problemMatcher": [],
            "label": "Frontend",
            "detail": "React",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "servers"
            }
        },
        {
            "label": "Test Report",
            "detail": "Playwright Test Report",
            "type": "shell",
            "command": "npx",
            "args": [
                "playwright",
                "show-report",
                "testing/reports"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "presentation": {
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "servers"
            },
            "problemMatcher": []
        },
        {
            "label": "Test",
            "detail": "Playwright Test",
            "type": "shell",
            "command": "npx",
            "args": [
                "playwright",
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend"
            },
            "problemMatcher": {
                "owner": "playwright",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^.*$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "presentation": {
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "group": "shells"
            }
        }
    ]
}